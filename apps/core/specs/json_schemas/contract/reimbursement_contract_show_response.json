{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "date": {
      "type": "string",
      "pattern": "^(\\d{4}(?!\\d{2}\\b))((-)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6]))))$"
    },
    "name": {
      "type": "string",
      "pattern": "^(?!.*[ЫЪЭЁыъэё@%&$^#])[a-zA-ZА-ЯҐЇІЄа-яґїіє0-9№\\\"!\\^\\*)\\]\\[(._-].*$"
    },
    "person_name": {
      "type": "string",
      "pattern": "^(?!.*[ЫЪЭЁыъэё@%&$^#])[А-ЯҐЇІЄа-яґїіє\\'\\- ]+$"
    },
    "address": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Dictionary: ADDRESS_TYPE"
        },
        "country": {
          "type": "string"
        },
        "area": {
          "$ref": "#/definitions/name"
        },
        "region": {
          "$ref": "#/definitions/name"
        },
        "settlement": {
          "$ref": "#/definitions/name"
        },
        "settlement_type": {
          "type": "string",
          "description": "settlement type Dictionary: SETTLEMENT_TYPE"
        },
        "settlement_id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "street_type": {
          "type": "string",
          "description": "street type Dictionary: STREET_TYPE"
        },
        "street": {
          "$ref": "#/definitions/name"
        },
        "building": {
          "type": "string",
          "pattern": "^[1-9]([0-9]{1,3})?(([ \\-]{1})?(?![ЫЪЭЁыъэё])[А-ЯҐЇЄа-яґїє]{1})?((\\s)?(\\\\|/)(\\s)?[1-9]([0-9]{1,3})?(([ \\-]{1})?(?![ЫЪЭЁыъэё])[А-ЯҐЇЄа-яґїє]{1})?)?$"
        },
        "apartment": {
          "type": "string"
        },
        "zip": {
          "type": "string",
          "pattern": "^[0-9]{5}$"
        }
      },
      "required": [
        "type",
        "country",
        "area",
        "settlement",
        "settlement_type",
        "settlement_id",
        "building"
      ],
      "additionalProperties": false
    },
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "phone": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Dictionary: PHONE_TYPE"
        },
        "number": {
          "type": "string",
          "pattern": "^\\+38[0-9]{10}$"
        }
      },
      "required": [
        "type",
        "number"
      ],
      "additionalProperties": false
    },
    "range": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([0-9]|0[0-9]|1[0-9]|2[0-3])\\.[0-5][0-9]$"
      },
      "minItems": 2,
      "maxItems": 2
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "$ref": "#/definitions/uuid",
      "description": "contract ID"
    },
    "contractor_legal_entity": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "$ref": "#/definitions/uuid",
          "description": "legal entity ID which make contract"
        },
        "name": {
          "type": "string",
          "$ref": "#/definitions/name",
          "description": "full official name of legal entity also the name to show on public sources [as map, portal etc]"
        },
        "edrpou": {
          "type": "string",
          "pattern": "^[0-9]{8,10}$",
          "description": "Unified Register of Businesses and Organizations"
        },
        "addresses": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/address",
            "description": "The max items of array is 2: REGISTRATION - required, RESIDENCE - optional. DIVISION is exception: REGISTRATION - optional, RESIDENCE - required"
          },
          "minItems": 1,
          "description": "address array"
        }
      },
      "required": [
        "id",
        "name",
        "edrpou",
        "addresses"
      ],
      "additionalProperties": false
    },
    "contractor_owner": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "$ref": "#/definitions/uuid"
        },
        "party": {
          "type": "object",
          "properties": {
            "first_name": {
              "type": "string",
              "$ref": "#/definitions/person_name"
            },
            "last_name": {
              "type": "string",
              "$ref": "#/definitions/person_name"
            },
            "second_name": {
              "type": "string",
              "$ref": "#/definitions/person_name"
            }
          },
          "required": [
            "first_name",
            "last_name"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "party"
      ],
      "additionalProperties": false
    },
    "contractor_base": {
      "type": "string",
      "description": "documents which allows to represent clinic"
    },
    "contractor_payment_details": {
      "type": "object",
      "properties": {
        "bank_name": {
          "type": "string",
          "description": "bank name"
        },
        "MFO": {
          "type": "string",
          "description": "bank code"
        },
        "payer_account": {
          "type": "string",
          "description": "Номер банківського рахунку"
        }
      },
      "required": [
        "bank_name",
        "MFO",
        "payer_account"
      ],
      "additionalProperties": false
    },
    "contractor_divisions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "$ref": "#/definitions/uuid",
            "description": "division ID"
          },
          "name": {
            "type": "string",
            "$ref": "#/definitions/name",
            "description": "the full name of division"
          },
          "addresses": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/address",
              "description": "The max items of array is 2: REGISTRATION - required, RESIDENCE - optional. DIVISION is exception: REGISTRATION - optional, RESIDENCE - required"
            },
            "minItems": 1,
            "description": "address array"
          },
          "phones": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/phone"
            },
            "minItems": 1
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "division's email"
          },
          "working_hours": {
            "type": [
              "object",
              "null"
            ],
            "properties": {
              "mon": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/range"
                },
                "minItems": 1
              },
              "tue": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/range"
                },
                "minItems": 1
              },
              "wed": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/range"
                },
                "minItems": 1
              },
              "thu": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/range"
                },
                "minItems": 1
              },
              "fri": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/range"
                },
                "minItems": 1
              },
              "sat": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/range"
                },
                "minItems": 1
              },
              "sun": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/range"
                },
                "minItems": 1
              }
            },
            "additionalProperties": false
          },
          "mountain_group": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "name",
          "addresses",
          "phones",
          "email",
          "working_hours"
        ],
        "additionalProperties": false
      }
    },
    "nhs_signer_base": {
      "type": "string",
      "description": "documents which allows to represent nhs"
    },
    "nhs_payment_method": {
      "type": "string",
      "description": "payment method for contract Dictionary: CONTRACT_PAYMENT_METHOD"
    },
    "status": {
      "type": "string",
      "description": "contract status"
    },
    "nhs_signer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "$ref": "#/definitions/uuid"
        },
        "party": {
          "type": "object",
          "properties": {
            "first_name": {
              "type": "string",
              "$ref": "#/definitions/person_name"
            },
            "last_name": {
              "type": "string",
              "$ref": "#/definitions/person_name"
            },
            "second_name": {
              "type": "string",
              "$ref": "#/definitions/person_name"
            }
          },
          "required": [
            "first_name",
            "last_name"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "party"
      ],
      "additionalProperties": false
    },
    "nhs_legal_entity": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "$ref": "#/definitions/uuid",
          "description": "legal entity ID which make contract"
        },
        "name": {
          "type": "string",
          "$ref": "#/definitions/name",
          "description": "full official name of legal entity also the name to show on public sources [as map, portal etc]"
        },
        "edrpou": {
          "type": "string",
          "description": "Unified Register of Businesses and Organizations"
        },
        "addresses": {
          "type": "array",
          "description": "The max items of array is 2: REGISTRATION - required, RESIDENCE - optional. DIVISION is exception: REGISTRATION - optional, RESIDENCE - required"
        }
      },
      "required": [
        "id",
        "name",
        "edrpou",
        "addresses"
      ],
      "additionalProperties": false
    },
    "issue_city": {
      "type": "string",
      "description": "place of contract"
    },
    "contract_number": {
      "type": "string",
      "description": "human readable number of contract."
    },
    "contract_request_id": {
      "type": "string",
      "$ref": "#/definitions/uuid",
      "description": "contract id"
    },
    "medical_program_id":{
      "type": "string",
      "$ref": "#/definitions/uuid",
      "description": "medical program id"
    },
    "is_suspended": {
      "type": "boolean"
    },
    "id_form": {
      "type": "string",
      "description": "type of contract - Dictionary: CONTRACT_TYPE"
    },
    "parent_contract_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "nhs_signed_date": {
      "type": "string",
      "description": "nhs sign date"
    },
    "start_date": {
      "type": "string",
      "description": "contract start date"
    },
    "end_date": {
      "type": "string",
      "description": "contract end date"
    },
    "inserted_at": {
      "type": "string"
    },
    "updated_at": {
      "type": "string"
    },
    "inserted_by": {
      "type": "string"
    },
    "updated_by": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "pattern": "REIMBURSEMENT"
    },
    "medical_pogram_id": {
      "$ref": "#/definitions/uuid",
      "description": "id of a medical program that is a subject of reimbursement contract"
    }
  },
  "required": [
    "id",
    "type",
    "contractor_legal_entity",
    "contractor_owner",
    "contractor_base",
    "contractor_payment_details",
    "contractor_divisions",
    "start_date",
    "end_date",
    "status",
    "nhs_signer_base",
    "nhs_payment_method",
    "nhs_signer",
    "nhs_legal_entity",
    "issue_city",
    "contract_number",
    "contract_request_id",
    "is_suspended",
    "id_form",
    "parent_contract_id",
    "nhs_signed_date",
    "medical_program_id"
  ],
  "additionalProperties": false
}