{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "phone": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "MOBILE",
            "LANDLINE"
          ]
        },
        "number": {
          "type": "string",
          "pattern": "^\\+38[0-9]{10}$"
        }
      },
      "required": [
        "type",
        "number"
      ],
      "additionalProperties": false
    },
    "address": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "RESIDENCE",
            "REGISTRATION"
          ]
        },
        "country": {
          "type": "string"
        },
        "area": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "settlement": {
          "type": "string"
        },
        "settlement_type": {
          "type": "string"
        },
        "settlement_id": {
          "type": "string"
        },
        "street_type": {
          "type": "string",
          "enum": [
            "BOULEVARD",
            "STREET",
            "AVENUE",
            "SQUARE"
          ]
        },
        "street": {
          "type": "string"
        },
        "building": {
          "type": "string",
          "pattern": "^[0-9]{1,3}(([ \\-]{1})?(?![ЫЪЭЁыъэё])[А-ЯҐЇЄа-яґїє]{1})?((\\s)?(\\|/)(\\s)?[0-9]{1,3}(([ \\-]{1})?(?![ЫЪЭЁыъэё])[А-ЯҐЇЄа-яґїє]{1})?)?$"
        },
        "apartment": {
          "type": "string"
        },
        "zip": {
          "type": "string",
          "pattern": "^[0-9]{5}$"
        }
      },
      "required": [
        "country",
        "settlement_id",
        "building"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "short_name": {
      "type": "string"
    },
    "public_name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "MIS",
        "MSP"
      ]
    },
    "owner_property_type": {
      "type": "string",
      "enum": [
        "STATE",
        "PRIVATE"
      ]
    },
    "legal_form": {
      "type": "string",
      "enum": [
        "ПІДПРИЄМЕЦЬ",
        "АКЦІОНЕРНЕ ТОВАРИСТВО",
        "ВІДКРИТЕ АКЦІОНЕРНЕ ТОВАРИСТВО",
        "ЗАКРИТЕ АКЦІОНЕРНЕ ТОВАРИСТВО",
        "РЕЛІГІЙНА ОРГАНІЗАЦІЯ",
        "ІНШІ ОРГАНІЗАЦІЙНО"
      ]
    },
    "edrpou": {
      "type": "string",
      "pattern": "^[1-9]([0-9]{7}|[0-9]{9})$"
    },
    "kved": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[0-9]{2}\\.[0-9]{2}$"
      }
    },
    "services": {
      "type": "array"
    },
    "addresses": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/address"
      }
    },
    "phones": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/phone"
      }
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "owner": {
      "type": "object",
      "properties": {
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "second_name": {
          "type": "string"
        },
        "tax_id": {
          "type": "string",
          "pattern": "^[1-9]([0-9]{7}|[0-9]{9})$"
        },
        "birth_date": {
          "type": "string",
          "format": "date-time"
        },
        "birth_place": {
          "type": "string"
        },
        "gender": {
          "type": "string",
          "enum": [
            "MALE",
            "FEMALE"
          ]
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "documents": {
          "type": "array"
        },
        "phones": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/phone"
          }
        }
      },
      "required": [
        "first_name",
        "last_name",
        "tax_id",
        "birth_date",
        "birth_place",
        "gender",
        "email"
      ]
    },
    "divisions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "addresses": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/address"
            }
          },
          "phones": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/phone"
            }
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "type": {
            "type": "string",
            "enum": [
              "CLINIC"
            ]
          }
        }
      }
    },
    "medical_service_provider": {
      "type": "object",
      "properties": {
        "licenses": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "license_number": {
                "type": "string"
              },
              "issued_by": {
                "type": "string"
              },
              "issued_date": {
                "type": "string",
                "format": "date-time"
              },
              "expiry_date": {
                "type": "string",
                "format": "date-time"
              },
              "kved": {
                "type": "string",
                "pattern": "^[0-9]{2}\\.[0-9]{2}$"
              },
              "what_licensed": {
                "type": "string"
              }
            }
          }
        },
        "accreditation": {
          "type": "object",
          "properties": {
            "category": {
              "type": "string",
              "enum": [
                "ДРУГА",
                "ПЕРША",
                "НЕ АКРЕДИТОВАНИЙ"
              ]
            },
            "issued_date": {
              "type": "string",
              "description": "02-28 (string, required) - дата видачі",
              "format": "date-time"
            },
            "expiry_date": {
              "type": "string",
              "description": "02-28 (string, optional)",
              "format": "date-time"
            },
            "order_no": {
              "type": "string",
              "description": "номер наказу МОЗ"
            },
            "order_date": {
              "type": "string",
              "description": "02-28 (string, required) - дата наказу МОЗ",
              "format": "date-time"
            }
          },
          "required": [
            "category",
            "order_no"
          ]
        }
      },
      "required": [
        "accreditation"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "VERIFIED",
        "DECLINED",
        "VERIFICATION_EXP"
      ]
    }
  },
  "required": [
    "name",
    "type",
    "owner_property_type",
    "legal_form",
    "edrpou",
    "kved",
    "services",
    "addresses",
    "phones",
    "email",
    "owner",
    "divisions",
    "medical_service_provider"
  ],
  "additionalProperties": false
}
